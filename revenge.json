import { registerCSS, unregisterCSS } from "@vendetta/patcher";

let css = `
  body::before {
    content: "";
    position: fixed;
    top: 0; left: 0; bottom: 0; right: 0;
    background: url("https://i.imgur.com/mtV5xSj.jpeg") no-repeat center center / cover;
    z-index: -1;
  }
`;

export default {
  onLoad() {
    registerCSS(css);
  },
  onUnload() {
    unregisterCSS(css);
  }
};
